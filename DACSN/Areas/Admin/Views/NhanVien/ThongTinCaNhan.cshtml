@using DACSN.Models
@model DACSN.Models.NhanVien

@{
    ViewBag.Title = "ThongTinCaNhan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutNhanVien.cshtml";
}

<style type="text/css">
    .form-horizontal h2 {
        text-align: center;
    }

    .form-group input {
        border-radius: 0;
        line-height: 30px;
        display: block;
        width: 100%;
        height: 34 px;
        text-align: center;
    }


        .form-group input[type="submit"] {
            width: 20%;
            border-bottom: #ffffff solid 3px;
            background: #000;
            border-color: #ffffff;
            font-weight: bold;
            color: #ffffff;
        }

            .form-group input[type="submit"]:hover {
                box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
                color: red;
                border: red;
            }

            .form-group input[type="submit"]:active {
                background-color: /*rgb(91 89 89 / 0.51)*/ #ffffff82;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }
    }
</style>



@{
    NhanVien nv = (NhanVien)Session["NhanVien"];
}

@using (Html.BeginForm("ThongTinCaNhan", "NhanVien"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Thông Tin Cá Nhân</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdNV)

        <div class="form-group">

            <input id="iMa" type="text" name="iMa" value="@nv.IdNV" placeholder="ID của bạn: " readonly="readonly" />

        </div>

        <div class="form-group">

            <input id="HovaTen" type="text" name="HovaTen" value="@nv.HovaTen" placeholder="Địa chỉ của bạn: " readonly="readonly" />

        </div>

        <div class="form-group">
            <input id="Email" type="text" name="Email" value="@nv.Email" placeholder="Địa chỉ của bạn: " readonly="readonly" />
        </div>

        <div class="form-group">
            <input id="sDiaChi" type="text" name="sDiaChi" value="@nv.DiaChi" placeholder="Địa chỉ của bạn: " />

        </div>

        <div class="form-group">
            <input id="sDienThoai" type="text" name="sDienThoai" value="@nv.SDT" placeholder="Số điện thoại của bạn: " />

        </div>

        <div class="form-group">
            <input id="sNgayDat" type="text" name="sNgayDat" value="@DateTime.Now.ToShortDateString()" readonly="readonly" />
        </div>


        <div class="form-group">
            <div class="nut col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}