@model DACSN.Models.DanhMuc

@{
    ViewBag.Title = "Thêm Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutNhanVien.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thêm danh mục</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Tên danh mục</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>}

<div>
    @Html.ActionLink("Trở lại trang danh sách danh mục", "Index")
</div>

