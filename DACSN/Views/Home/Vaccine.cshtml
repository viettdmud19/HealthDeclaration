@model IEnumerable<DACSN.Models.BaiViet>
@{
    ViewBag.Title = "Vacine - Tiêm chủng";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<style type="text/css">


    #img {
        padding-top: 13px;
    }

    #a {
        color: #000000;
        text-decoration: none;
        font-weight: bold;
    }
</style>

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-8">
            <h3 class="tle1" style="color:darkblue"><img src="~/Images/TieuDe.png" style="height:25px;width:10px;" />&#160;<b>Vacine - Tiêm chủng</b></h3>
            <div class="row">
                @foreach (var vacine in Model)
                {
                    <div class="col-lg-12">
                        <div class="col-lg-4" id="img">
                            <img src="~/Images/@vacine.Hinh" style="height:130px;width:180px" />
                        </div>
                        <div class="col-lg-8">
                            <h4><a id="a" href="@Url.Action("ChiTietTinTuc", "Home", new { id = vacine.IdBV})">@vacine.TieuDe</a></h4>
                            <p>@vacine.TomTat</p>
                        </div>
                    </div>
                }
            </div>

        </div>
        <div class="col-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="tle1" style="color:darkblue"><img src="~/Images/TieuDe.png" style="height:25px;width:10px;" />&#160;<b>Diễn biến dịch</b></h3>
                    @Html.Action("DienBienDich", "Home")
                </div>
                <div class="col-lg-12">
                    <h5 class="tle1" style="color:darkblue"><b>Danh sách số điện thoại các bệnh viện</b></h5>
                    <img src="~/Images/dienthoaiyte.png" style="height:350px;width:350px;" />
                </div>
            </div>
        </div>
    </div>
</div>

